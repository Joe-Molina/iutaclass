<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/indexClass.css">
    <link rel="stylesheet" href="/css/crearaula.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <title>crear aula</title>
</head>

<body>
    <%- include('partials/header.ejs') %>
        <section class="all-container">
            <article class="aula-info">
                <h2>ASIGNAR AULA</h2>
                <form action="/asignaraula" method="POST">
                    <label for="select-docente">seleciona estudiante</label>
                    <select name="user_id" id="select-docente" class="form-select">

                        <% estudiantes.forEach(estudiante=> {%>
                            <option value="<%=estudiante.id%>">
                                <%=estudiante.name%>
                            </option>
                            <% }); %>
                    </select>

                    <label for="select-estudiante">seleciona aula a asignar</label>
                    <select name="aula_id" id="select-docente" class="form-select">

                        <% aulas.forEach(aula=> {%>
                            <option value="<%=aula.id%>">
                                <%=aula.materia%>
                            </option>
                            <% }); %>
                    </select>

                    <input class="submit btn btn-primary" type="submit" value="Enviar" class="submit">
                </form>
            </article>
        </section>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>

</body>

</html>