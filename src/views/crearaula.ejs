<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/indexClass.css">
    <link rel="stylesheet" href="/css/crearaula.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <title>iutaclass</title>
</head>
<body>
<%- include('partials/header.ejs') %>
    <section class="all-container">
        <article class="aula-info">
            <h2>CREAR AULA</h2>
            <form action="/crearaula" method="POST">


                <label for="select-docente">seleciona el docente encargado</label>
                <select name="user_id" id="select-docente" class="form-select">
        
                    <% docentes.forEach(docente => {%>
                        <option value="<%=docente.id%>"><%=docente.name%></option>
                        <% }); %>
                  </select>
                <input class="form-control" type="text" name="materia" id="" placeholder="introduce la materia">
                <input class="form-control" type="text" name="seccion" id="" placeholder="introduce la seccion">
                <input type="submit" value="Enviar" class="submit btn btn-primary">
            </form>
        </article>

    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

</body>
</html>